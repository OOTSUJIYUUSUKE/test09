<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.MyBatisDemo.mapper.AnimeMoviesMapper">
    <select id="findAll" resultType="com.example.MyBatisDemo.entity.AnimeMoviesForm">
        SELECT
        *
        FROM
        animeMovies
    </select>
    <select id="findByPublishedYear" resultType="com.example.MyBatisDemo.entity.AnimeMoviesForm">
        SELECT
        *
        FROM
        animeMovies
        WHERE
        publishedYear = #{publishedYear}
    </select>
    <select id="findById" resultType="com.example.MyBatisDemo.entity.AnimeMoviesForm">
        SELECT
        *
        FROM
        animeMovies
        WHERE
        id = #{id};
    </select>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.example.MyBatisDemo.entity.AnimeMoviesForm">
        INSERT INTO animeMovies (title, publishedYear)
        VALUES (#{title}, #{publishedYear})
    </insert>
    <update id="update">
        UPDATE animeMovies
        SET
        title = #{conversionAnimeMovies.title},
        publishedYear = #{conversionAnimeMovies.publishedYear}
        WHERE
        id = #{id};
    </update>
    <delete id="delete">
        DELETE
        FROM
        animeMovies
        WHERE
        id = #{id};
    </delete>
</mapper>
